          el.style.height = size+'px';
          el.style.borderRadius = '50%';
          el.style.background = Math.random()>0.5 ? 'rgba(110,231,255,0.22)' : 'rgba(139,92,246,0.2)';
          el.style.boxShadow = '0 6px 24px rgba(110,231,255,0.08)';
          el.style.filter='blur(3px)';
          el.style.opacity = '0.02';
          container.appendChild(el);
          // animate
          const dur = 8000 + Math.random()*9000;
          el.animate([
            {transform:'translateY(0) scale(0.6)', opacity:0.05},
            {transform:'translateY(-110vh) scale(1)', opacity:0.9},
            {transform:'translateY(-160vh) scale(1.1)', opacity:0}
          ],{duration:dur, easing:'cubic-bezier(.2,.8,.2,1)'}).onfinish = ()=> el.remove();
