    <script>
      // Animate brand-logo nodes and build a peer-to-peer mesh between outer nodes
      (function(){
        const svg = document.querySelector('.brand-logo');
        if(!svg) return;

        const nodes = {
          center: document.getElementById('nodeCenter'),
          up: document.getElementById('nodeUp'),
          right: document.getElementById('nodeRight'),
          down: document.getElementById('nodeDown'),
          left: document.getElementById('nodeLeft')
        };

        const connectionsGroup = document.getElementById('connections');
        const outers = [nodes.up, nodes.right, nodes.down, nodes.left];

        // create connector elements for each pair of outer nodes (i<j)
        const pairs = [];
        for(let i=0;i<outers.length;i++){
          for(let j=i+1;j<outers.length;j++){
            const lineShadow = document.createElementNS('http://www.w3.org/2000/svg','line');
            lineShadow.setAttribute('class','connector-shadow');
            const lineMain = document.createElementNS('http://www.w3.org/2000/svg','line');
            lineMain.setAttribute('class','connector');
            connectionsGroup.appendChild(lineShadow);
            connectionsGroup.appendChild(lineMain);
            pairs.push({a:i,b:j,shadow:lineShadow,main:lineMain});
          }
        }

        const base = {r:36};
        let t = 0;

        function update(){
          t += 0.016;
          // oscillating offsets for a natural, independent movement
          const upPos = {x: Math.sin(t*1.2)*4 + 0, y: -base.r + Math.cos(t*1.6)*4};
          const rightPos = {x: base.r + Math.cos(t*1.1)*4, y: Math.sin(t*1.3)*4 + 0};
          const downPos = {x: Math.sin(t*1.4)*4 + 0, y: base.r + Math.cos(t*0.9)*4};
          const leftPos = {x: -base.r + Math.cos(t*1.05)*4, y: Math.sin(t*0.95)*4 + 0};

          const posArr = [upPos, rightPos, downPos, leftPos];

          // update node positions
          for(let k=0;k<outers.length;k++){
            const el = outers[k];
            const p = posArr[k];
            el.setAttribute('cx', p.x);
            el.setAttribute('cy', p.y);
          }

          // update pairwise connectors so lines always attach to node centers
          for(const pr of pairs){
            const a = posArr[pr.a];
            const b = posArr[pr.b];
            // shadow slightly offset for depth
            pr.shadow.setAttribute('x1', a.x); pr.shadow.setAttribute('y1', a.y);
            pr.shadow.setAttribute('x2', b.x + (b.x-a.x)*0.02); pr.shadow.setAttribute('y2', b.y + (b.y-a.y)*0.02);

            pr.main.setAttribute('x1', a.x); pr.main.setAttribute('y1', a.y);
            pr.main.setAttribute('x2', b.x); pr.main.setAttribute('y2', b.y);

            // optional: adapt opacity by distance (closer -> brighter)
            const dx = a.x-b.x, dy = a.y-b.y; const d = Math.hypot(dx,dy);
            const opacity = 1 - Math.min(1, (d-20)/80);
            pr.main.style.opacity = (0.22 * opacity).toFixed(3);
            pr.shadow.style.opacity = (0.12 * opacity * 0.9).toFixed(3);
          }

          requestAnimationFrame(update);
        }
        requestAnimationFrame(update);
      })();
    </script>
    <script>
      // network canvas: animated nodes + connecting lines (metaverse connections)
      (function(){
        const canvas = document.getElementById('net-canvas');
        if(!canvas) return;
        const ctx = canvas.getContext('2d');
        let w = canvas.width = window.innerWidth;
        let h = canvas.height = window.innerHeight;
        const nodes = [];
        const NODE_COUNT = Math.max(12, Math.round((w*h)/120000));
        function rand(min,max){return Math.random()*(max-min)+min}
        for(let i=0;i<NODE_COUNT;i++){
          nodes.push({x:rand(0,w), y:rand(0,h), vx:rand(-0.3,0.3), vy:rand(-0.3,0.3), r:rand(1.6,3.6)});
        }
        function resize(){ w = canvas.width = window.innerWidth; h = canvas.height = window.innerHeight; }
        window.addEventListener('resize', resize);
        function draw(){
          ctx.clearRect(0,0,w,h);
          // subtle gradient background overlay
          const g = ctx.createLinearGradient(0,0,w,h);
          g.addColorStop(0,'rgba(11,16,32,0.02)'); g.addColorStop(1,'rgba(14,22,48,0.04)');
          ctx.fillStyle = g; ctx.fillRect(0,0,w,h);

          // update nodes
          for(let i=0;i<nodes.length;i++){
            const n = nodes[i];
            n.x += n.vx; n.y += n.vy;
            if(n.x<0||n.x>w) n.vx *= -1; if(n.y<0||n.y>h) n.vy *= -1;
          }

          // draw connections between nearby nodes
          for(let i=0;i<nodes.length;i++){
            const a = nodes[i];
            for(let j=i+1;j<nodes.length;j++){
              const b = nodes[j];
              const dx = a.x-b.x, dy = a.y-b.y; const d = Math.hypot(dx,dy);
              if(d<160){
                const alpha = 1 - (d/160);
                ctx.strokeStyle = `rgba(110,231,255,${0.14*alpha})`;
                ctx.lineWidth = 1*Math.min(1, alpha*1.6);
                ctx.beginPath(); ctx.moveTo(a.x,a.y); ctx.lineTo(b.x,b.y); ctx.stroke();
              }
            }
          }

          // draw nodes
          for(const n of nodes){
            ctx.fillStyle = 'rgba(110,231,255,0.9)';
            ctx.beginPath(); ctx.arc(n.x,n.y,n.r,0,Math.PI*2); ctx.fill();
          }
          requestAnimationFrame(draw);
        }
        draw();
      })();
    </script>
